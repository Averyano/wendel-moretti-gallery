mixin item(titleText, linkText, linkHref)
	.footer__item
		.footer__text=titleText
		a.footer__link(href=linkHref target="_blank")=linkText

footer 
	.footer__container
		.footer__left 
			.footer__ui__bottom__left
				h2 Inspired By You
				h3 Interior Design by Daria Utkina 
		.footer__center 
			a(href="#welcome-section" class="footer__logo" title="Go to top" data-element-link="#welcome-section")
				img(data-pre="@images/logo.svg" width="256px" height="256px")

			p.footer__text © All rights reserved.
			p.footer__text.footer__text--bold SINCE 2020
		.footer__right
			p.footer__text.footer__text--right.footer__text--bold  London — Surrey, England
			p.footer__text.footer__text--right.footer__text--bold  Kyiv, Ukraine


